{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude",
      "type": "shell",
      "command": "dotenvx run -f .env -f .env.codepro -- claude",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
