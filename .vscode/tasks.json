      "icon": {
        "id": "cloud",
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "CodeRabbit",
      "type": "shell",
      "command": "dotenvx run -f .env -f .env.codepro -- coderabbit",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "group": "split-terminals"
